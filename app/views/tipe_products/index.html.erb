<div class="page-header">
  <%= link_to new_tipe_product_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo
  <% end %>
  <h1>Listando tipe_products</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tipe_products) do |tipe_product| %>
            <td><%= tipe_product.name %></td>
            <td><%= link_to 'Mostrar', tipe_product %></td>
        <td><%= link_to 'Editar', edit_tipe_product_path(tipe_product) %></td>
        <td><%= link_to 'Deletar', tipe_product, method: :delete, data: { confirm: 'Confirma?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
