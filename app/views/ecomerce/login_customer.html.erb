<div class="page-header">
  <form method="post" action="/customer/login" class="form-signin">
      <h1 class="h3 mb-3 font-weight-normal">Já é cliente faça seu Login</h1>
      <label for="email" class="sr-only">Email</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="Email" required autofocus>
      <label for="password" class="sr-only">Senha</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Senha" required>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" name ="remember" value="1"> Lembrar de mim
        </label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
    </form>

    <hr />
    <h1 class="h3 mb-3 font-weight-normal">Não é cliente faça cadastro</h1>

    <a href="/customer/new" class="btn btn-lg btn-success btn-block mb-3">Cadastrar</a>
</div>
