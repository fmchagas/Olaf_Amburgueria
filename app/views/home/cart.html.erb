<div class="row">
  <h1>Carinho</h1>
</div>

<div class="row">
  <% if @products.blank? %>
     <h5>Nenhum produto encontrado</h5>
  <% else %>
    <% @products.each do |product| %>
      <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="/product/<%= product.id %>">
                <img class="card-img-top" src="<%= product.image %>" alt="<%= product.name %>">
              </a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="/home/product/<%= product.id %>"><%= product.name %></a>
                </h4>
                <h5>R$<%= product.price %></h5>
                <p class="card-text">
                  <%= product.description.truncate(100) %>
                </p>
              </div>
              <div class="card-footer">
                <% if shop_cart?(product.id) %>
                  <a href="/home/product/<%= product.id %>/remove" style="color: red">Remover carrinho</a>
                <% else %>
                  <a href="/home/product/<%= product.id %>/add">Adicionar carrinho</a>
                <% end %>
              </div>
            </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="row">
    <a href="/home/cart/pay" class="btn btn-success btn-lg btn-block mb-2">Fechar compra</a>
</div>