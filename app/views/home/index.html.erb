<div class="row">

  <div class="col-lg-3">

    <h1 class="my-4">Categorias</h1>
    <div class="list-group">
      <% TipeProduct.all.each do |tipe_product| %>
        <a href="/?tipe_product=<%= tipe_product.id %>" class="list-group-item"><%= tipe_product.name %></a>
      <% end %>
    </div>

  </div>
  <!-- /.col-lg-3 -->

  <div class="col-lg-9">

    <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img class="d-block img-fluid" src="https://www.wearewhatweeat.co.nz/content/dam/wawwe/Recipes/recipe-banners-1600x530/old-smokey-burger-1600x1530.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="https://www.wearewhatweeat.co.nz/content/dam/wawwe/Recipes/recipe-banner-small-desktop-1440x530/One-Pot-Mac-Cheese-1440x530-B.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="https://www.wearewhatweeat.co.nz/content/dam/wawwe/Recipes/recipe-banner-small-desktop-1440x530/Stovetop-Chicken-Biriyani-1440x530-B.jpg" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div class="row">
      
      <% if @products.blank? %>
        <h5>Nenhum produto encontrado</h5>
      <% else %>
        <% @products.each do |product| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="/product/<%= product.id %>">
                <img class="card-img-top" src="<%= product.image %>" alt="<%= product.name %>">
              </a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="/home/product/<%= product.id %>"><%= product.name %></a>
                </h4>
                <h5>R$<%= product.price %></h5>
                <p class="card-text">
                  <%= product.description.truncate(100) %>
                </p>
              </div>
              <div class="card-footer">
                <% if shop_cart?(product.id) %>
                  <a href="/home/product/<%= product.id %>/remove" style="color: red">Remover carrinho</a>
                <% else %>
                  <a href="/home/product/<%= product.id %>/add">Adicionar carrinho</a>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        
        <div class="col-lg-12 col-md-12">
          <div class="apple_pagination">
            <%= will_paginate @products, :container => false %>
          </div>
        </div>
      <% end %>
    </div>
    <!-- /.row -->

  </div>
  <!-- /.col-lg-9 -->

</div>
<!-- /.row -->